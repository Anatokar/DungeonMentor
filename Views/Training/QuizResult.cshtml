@{
    ViewData["Title"] = "Результаты теста";
    var score = (int)ViewBag.Score;
    var passed = ViewBag.Passed as bool? ?? false;
    var moduleName = ViewBag.ModuleName as string;
    var moduleId = ViewBag.ModuleId as int?;
}

<h1>Результаты теста: @moduleName</h1>
<h2>Ваш результат: @score%</h2>
<p>Правильных ответов: @ViewBag.Correct из @ViewBag.Total</p>

@if (passed)
{
    <div class="alert alert-success">
        <strong>Поздравляем! Вы успешно прошли тест! 🎉</strong>
    </div>
}
else
{
    <div class="alert alert-warning">
        <strong>Попробуйте ещё раз! Вы почти у цели!</strong>
    </div>
}

<div class="mt-4">
    @if (passed)
    {
        <a href="/Training/Index" class="btn btn-primary">К списку модулей</a>
        <a href="/Training/History" class="btn btn-secondary">Моя история</a>
    }
    else
    {
        <a href="/Training/Quiz/@moduleId" class="btn btn-warning">Попробовать снова</a>
        <a href="/Training/Index" class="btn btn-secondary">К списку модулей</a>
    }
</div>